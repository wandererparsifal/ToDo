<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_task_edit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />

    </android.support.design.widget.AppBarLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/title"
        android:textCursorDrawable="@drawable/color_cursor"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelAlwaysShown="false"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelText="@string/title"
        app:met_floatingLabelTextColor="@color/colorHotPink"
        app:met_primaryColor="@color/colorAccent"
        app:met_textColor="@color/colorDarkPurple"
        app:met_textColorHint="@color/colorHotPink"
        app:met_validateOnFocusLost="true"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/content"
        android:textCursorDrawable="@drawable/color_cursor"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelAlwaysShown="false"
        app:met_floatingLabelAnimating="true"
        app:met_floatingLabelText="@string/content"
        app:met_floatingLabelTextColor="@color/colorHotPink"
        app:met_primaryColor="@color/colorAccent"
        app:met_textColor="@color/colorDarkPurple"
        app:met_textColorHint="@color/colorHotPink"
        app:met_validateOnFocusLost="true"
        />
</LinearLayout>